<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="tamedia.messages">

  <body>
    <metal:content-core fill-slot="content-core">
      <metal:content-core define-macro="content-core">

        <form action="" method="post" id="customstyles-form"
              tal:define="options view/options">

          <tal:field repeat="field view/fields">
            <div tal:define="field_id field;
                             field_name string:css.${field};
                             field_value python:options.get(field_name, '')"
                 class="field">
              <label tal:attributes="for field_id" tal:content="field_id" />
              <input tal:attributes="id field_id;
                                     name field_name;
                                     value field_value"
                     type="text" />
            </div>
          </tal:field>

          <input type="submit" class="context"
                 name="form.submit" value="Save" />

          <input type="submit" class="destructive"
                 name="form.reset" value="Reset" />
        </form>

        <div id="style-preview">&nbsp;</div>

      </metal:content-core>
    </metal:content-core>
  </body>
</html>
